<resources>

    <style name="AppTheme" parent="Base.AppTheme">
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/dark_primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActivityAnimation">
        <!--<item name="android:windowAnimationStyle">@null</item>-->
    </style>

    <style name="AppTheme.NoActionBar.NoTransparency">
<!--        <item name="windowDrawsSystemBarBackgrounds">true</item>
        <item name="statusBarColor">@color/primary_dark</item>-->
    </style>

    <style name="AppTheme.NoActionBar.NoAnimation" parent="AppTheme.NoActivityAnimation">
<!--        <item name="windowDrawsSystemBarBackgrounds">true</item>
        <item name="statusBarColor">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.Search" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="autoCompleteTextViewStyle">@style/AppTheme.Search.AutoCompleteTextView</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
        <item name="colorControlNormal">@color/text_light</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
    </style>

    <style name="AppTheme.Search.AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColorHint">@color/text_light</item>
        <!-- If set to @null the cursor will be displayed using android:textColor -->
        <item name="android:textCursorDrawable">@null</item>
    </style>


    <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="colorControlNormal">@color/text_light</item>
        <item name="colorControlActivated">@color/text_light</item>
    </style>

    <style name="PaddinglessDialog" parent="Theme.AppCompat.Dialog">
    </style>
</resources>
