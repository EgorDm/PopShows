<?xml version="1.0" encoding="utf-8"?>
<it.gmariotti.cardslib.library.view.ForegroundLinearLayout
    android:id="@+id/card_main_layout"
    style="@style/card.native.main_layout_foreground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_media_medium_height"
    android:orientation="horizontal"
    xmlns:card="http://schemas.android.com/tools">

    <it.gmariotti.cardslib.library.view.component.CardThumbnailView
        android:id="@+id/card_thumbnail_layout"
        android:layout_width="@dimen/card_media_large_width"
        android:layout_height="match_parent"
        app:card_thumbnail_layout_resourceID="@layout/card_thumbnail_generated"/>

    <LinearLayout
        android:id="@+id/card_thumb_and_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <net.egordmitriev.watchit.mediacards.widgets.cards.MediumCardHeaderView
            android:id="@+id/card_header_layout"
            style="@style/card.native.header_outer_layout"
            card:card_header_layout_resourceID="@layout/card_media_medium_header_outer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/card_main_content_layout"
            style="@style/card.native.content_outer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"/>

    </LinearLayout>

</it.gmariotti.cardslib.library.view.ForegroundLinearLayout>