<?xml version="1.0" encoding="utf-8"?>
<it.gmariotti.cardslib.library.view.ForegroundLinearLayout
    android:id="@+id/card_main_layout"
    style="@style/card.native.main_layout_foreground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_media_small_height"
    android:orientation="horizontal">

    <it.gmariotti.cardslib.library.view.component.CardThumbnailView
        android:id="@+id/card_thumbnail_layout"
        android:layout_width="@dimen/card_media_small_thumbnail_width"
        android:layout_height="match_parent"
        app:card_thumbnail_layout_resourceID="@layout/card_thumbnail_layout"/>


    <FrameLayout
        android:id="@+id/card_main_content_layout"
        style="@style/card.native.content_outer_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/card_thumbnail_secondary"
        android:layout_width="@dimen/card_media_small_thumbnail_width"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

</it.gmariotti.cardslib.library.view.ForegroundLinearLayout>