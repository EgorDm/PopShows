<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_0"
    android:paddingBottom="@dimen/spacing_large">

    <LinearLayout
        android:id="@+id/detail_footer_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"/>

    <net.egordmitriev.loaderview.LoaderView
        android:layout_marginTop="16dp"
        android:id="@+id/detail_loaderview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:error_message="Something went wrong."
        app:loading_resourceID="@layout/card_media_list_loader_loading"
        app:state="loading"/>


</FrameLayout>