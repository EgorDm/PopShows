<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/detail_extra_section"
        style="@style/card_section_container"
        android:layout_height="60dp"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_normal"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large">

        <TextView
            android:id="@+id/detail_extra_section_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:paddingTop="5dp"
            android:text="@string/more"
            android:textAllCaps="true"
            android:textColor="@color/card_text_color_header"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing_normal"
        android:paddingRight="@dimen/spacing_normal">

        <it.gmariotti.cardslib.library.view.CardViewNative
            android:id="@+id/detail_extra_section_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:card_layout_resourceID="@layout/card_media_split_outer_layout"/>

        <it.gmariotti.cardslib.library.view.CardViewNative
            android:id="@+id/detail_extra_section_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            app:card_layout_resourceID="@layout/card_media_split_outer_layout"/>

        <it.gmariotti.cardslib.library.view.CardViewNative
            android:id="@+id/detail_extra_section_item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            app:card_layout_resourceID="@layout/card_media_split_outer_layout"/>

    </LinearLayout>

</LinearLayout>